<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/calendarViewFragment">

    <fragment
        android:id="@+id/calendarViewFragment"
        android:name="com.android.example.reemy.CalendarViewFragment"
        android:label="fragment_calendar_view"
        tools:layout="@layout/fragment_calendar_view" >
        <action
            android:id="@+id/action_calendarViewFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_calendarViewFragment_to_notePreviewFragment2"
            app:destination="@id/notePreviewFragment2" />
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.android.example.reemy.AddNoteFragment"
        android:label="fragment_add_note"
        tools:layout="@layout/fragment_add_note" />
    <fragment
        android:id="@+id/notePreviewFragment2"
        android:name="com.android.example.reemy.NotePreviewFragment"
        android:label="fragment_note_preview"
        tools:layout="@layout/fragment_note_preview" />
</navigation>